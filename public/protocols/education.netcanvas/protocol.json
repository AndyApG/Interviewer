    "node": {
      "person": {
        "label": "Person",
        "color": "coral",
        "displayVariable": "nickname",
        "iconVariant": "add-a-person",
        "variables": {
          "name": {
            "label": "Name",
            "description": "Human readable description",
            "type": "text",
            "validation": {
              "required": true,
              "minLength": 1,
              "maxLength": 24
            }
          },
          "yearsKnown": {
            "label": "How many years have you known this person for?",
            "description": "Human readable description",
            "type": "number",
            "validation": {
              "required": true
            }
          },
          "gender": {
            "label": "Gender",
            "description": "Human readable description",
            "type": "number",
            "options": ["Male", "Female", "Non-binary"],
            "validation": {
              "required": true
            }
          },
          "nickname": {
            "label": "Nickname",
            "description": "Human readable description",
            "type": "text",
            "validation": {
              "required": true,
              "minLength": 1,
              "maxLength": 8
            }
          }
        }
      }
    },
    "edge": {
      "friend": {
        "label": "Friend",
        "color": "mustard",
        "variables": {
          "contact_freq": {
            "label": "contact_freq",
            "description": "Contact frequency.",
            "type": "ordinal",
            "values": {
              "Very Often": 4,
              "Often": 3,
              "Sometimes": 2,
              "Rarely": 1,
              "Never": -1
            }
          }
        }
      },
      "professional": {
        "label": "Professional",
        "color": "kiwi",
        "variables": {
        }
      }
    }
  },
