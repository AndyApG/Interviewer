  "variableRegistry": {
    "node": {
      "person": {
        "label": "Person",
        "color": "coral",
        "displayVariable": "nickname",
        "iconVariant": "add-a-person",
        "variables": {
          "name": {
            "label": "Name",
            "description": "The alter's name.",
            "type": "text",
            "validation": {
              "required": true,
              "minLength": 1,
              "maxLength": 24
            }
          },
          "contactFreq": {
            "label": "Contact frequency ordinal variable.",
            "description": "Contact frequency ordinal variable",
            "type": "ordinal"
          },
          "outsideOfSchool": {
            "label": "Have you contacted this person outside of school in the past 7 days?",
            "description": "If the participant has contacted the alter outside of school in the past 7 days.",
            "type": "checkbox"
          },
          "yearsKnown": {
            "label": "How many years have you known this person for?",
            "description": "How many years the participant has known the alter.",
            "type": "number",
            "validation": {
              "required": true
            }
          },
          "gender": {
            "label": "What is this person's gender?",
            "description": "Percieved gender of the alter.",
            "type": "text",
            "options": ["Male", "Female", "Non-binary"],
            "validation": {
              "required": true
            }
          },
          "nickname": {
            "label": "Nickname",
            "description": "Participant Nickname",
            "type": "text",
            "validation": {
              "required": true,
              "minLength": 1,
              "maxLength": 10
            }
          }
        }
      }
    },
    "edge": {
      "friend": {
        "label": "Friend",
        "color": "mustard",
        "variables": {
          "contact_freq": {
            "label": "contact_freq",
            "description": "Contact frequency.",
            "type": "ordinal",
            "values": {
              "Very Often": 4,
              "Often": 3,
              "Sometimes": 2,
              "Rarely": 1,
              "Never": -1
            }
          }
        }
      },
      "professional": {
        "label": "Professional",
        "color": "kiwi",
        "variables": {
        }
      }
    }
  },
