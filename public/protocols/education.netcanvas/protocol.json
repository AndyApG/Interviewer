  "forms": {
    "person": {
      "title": "Add A Person",
      "entity": "node",
      "type": "person",
      "optionToAddAnother": true,
      "fields": [
        {
          "variable": "name",
          "component": "TextInput"
        },
        {
          "variable": "nickname",
          "component": "TextInput"
